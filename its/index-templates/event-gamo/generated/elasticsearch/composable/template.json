{
  "_meta": {
    "description": "Sample composable template that includes all ECS fields",
    "ecs_version": "8.9.0"
  },
  "composed_of": [
    "ecs_8.9.0_base",
    "ecs_8.9.0_ecs",
    "ecs_8.9.0_device",
    "ecs_8.9.0_event",
    "ecs_8.9.0_related",
    "ecs_8.9.0_client",
    "ecs_8.9.0_user_agent",
    "ecs_8.9.0_agent",
    "ecs_8.9.0_user"
  ],
  "index_patterns": [
    "event_gamo_*"
  ],
  "priority": 2,
  "template": {
    "mappings": {
      "dynamic_templates": [
        {
          "context_as_keyword": {
            "mapping": {
              "type": "keyword"
            },
            "match_mapping_type": "string",
            "path_match": "event.its.context.*"
          }
        },
        {
          "context_as_double": {
            "mapping": {
              "type": "double"
            },
            "match_mapping_type": "long",
            "path_match": "event.its.context.*"
          }
        },
        {
          "properties_as_keyword": {
            "mapping": {
              "type": "keyword"
            },
            "match_mapping_type": "string",
            "path_match": "event.its.properties.*"
          }
        },
        {
          "properties_as_double": {
            "mapping": {
              "type": "double"
            },
            "match_mapping_type": "long",
            "path_match": "event.its.properties.*"
          }
        }
      ],
      "runtime": {
        "event.its.payment.channel_name": {
          "script": {
            "lang": "painless",
            "source": "if(doc['event.action'].value == 'its_purchase') { if(['1380','3623','3215','3197','3206','3021','3196','3198','859','3642','3195','57','3312','3607','1682','3625','3049','1687','3226','2843','3628','3216','3631','3277','1680','3640','3639','3709','1685','1690','1689','3057','3319','2419','3549','3656','3320','768','2993','3629','1730','1939','3229','1463','1904','1920','3314'].contains(doc['event.its.payment.channel'].value)) {emit('xsolla');} else if (['450','451','252','121','123','349','122','516','240','348','331','220','257','419','233','227','230','91','301','300','422','508','90','234','23','507','517','258','26','221','332','344','226','82','253','80','81','27','500','250','501','223','302','251','342','346','70'].contains(doc['event.its.payment.channel'].value)) {emit('coda');} else if (['gcard'].contains(doc['event.its.payment.channel'].value)) {emit('CardPay');} else if (['ingame', 'costpoint'].contains(doc['event.its.payment.channel'].value)) {emit('mycard');} else if (['FA031','HC0036','HE0004','HE0037','DG0700001','HE0021','DF6300001','DF6400001','DF6500001','HC0038'].contains(doc['event.its.payment.channel'].value)) {emit('mycard-billing');} else if (['payosqr'].contains(doc['event.its.payment.channel'].value)) {emit('payos');} else if (['bankaccount', 'paypal', 'atmcambodia'].contains(doc['event.its.payment.channel'].value)) {emit('transfer');} else {emit(doc['event.its.payment.channel'].value);} }"
          },
          "type": "keyword"
        },
        "event.its.payment.transfer_type": {
          "script": {
            "lang": "painless",
            "source": "if(doc['event.action'].value != 'its_purchase') {emit('N/A');} else if (['google','apple','450','payosqr','gcard','451','252','1380','3623','3215','121','123','3197','349','122','516','240','3206','3021','3196','3198','859','ingame','348','3642','3195','57','331','220','257','3312','419','233','227','fa031','3607','230','91','301','costpoint','1682','3625','3049','300','cardpay','1687','3226','422','508','90','hc0036','234','23','2843','onestore','3628','507','3216','3631','517','3277','atmcambodia','258','1680','3640','3639','3709','26','221','332','1685','1690','1689','3057','3319','344','226','2419','xsolla','3549','3656','82','he0004','he0037','253','he0700001','3320','768','2993','3629','billing','80','81','1730','he0021','27','1939','500','250','501','223','302','df6300001','mia','df6400001','df6500001','3229','hc0038','1463','1904','1920','251','3314','342','346','70','transfer','xsollaid','xsollatw'].contains(doc['event.its.payment.channel'].value)) { if(doc['event.its.game.id'].size() != 0 && !doc['event.its.game.id'][0].empty) {emit('C2G');} else {emit('C2W')}  } else if (['oauthpay','mia'].contains(doc['event.its.payment.channel'].value)) {emit('W2G');} else if (['bankaccount', 'paypal'].contains(doc['event.its.payment.channel'].value))  {emit('W2W');} else if (['cash'].contains(doc['event.its.payment.channel'].value)) {emit('T2W');} else {emit('N/A');}"
          },
          "type": "keyword"
        },
        "event.its.payment.usd_amount": {
          "script": {
            "lang": "painless",
            "source": "if(doc['event.action'].value == 'its_purchase') { double usdExchangeRate = doc.containsKey('event.its.properties.usd_exchange_rate') && doc['event.its.properties.usd_exchange_rate'].size() > 0 ? doc['event.its.properties.usd_exchange_rate'].value : 1.0; emit(doc['event.its.payment.amount'].value * usdExchangeRate); }"
          },
          "type": "double"
        },
        "event.its.payment.vnd_amount": {
          "script": {
            "lang": "painless",
            "source": "if(doc['event.action'].value == 'its_purchase') { emit(doc['event.its.payment.amount'].value * doc['event.its.properties.exchange_rate'].value); }"
          },
          "type": "double"
        }
      }
    },
    "settings": {
      "index": {
        "codec": "best_compression",
        "mapping": {
          "total_fields": {
            "limit": 2000
          }
        }
      }
    }
  }
}
