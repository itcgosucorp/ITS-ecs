{
  "index_patterns": [
    "report_*_*_dau"
  ],
  "mappings": {
    "dynamic": false,
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "app": {
        "ignore_above": 1024,
        "type": "keyword"
      },
      "count": {
        "type": "long"
      },
      "os": {
        "ignore_above": 1024,
        "type": "keyword"
      },
      "publisher": {
        "ignore_above": 1024,
        "type": "keyword"
      }
    }
  },
  "order": 1,
  "settings": {
    "index": {
      "codec": "best_compression",
      "mapping": {
        "total_fields": {
          "limit": 1000
        }
      },
      "refresh_interval": "2s"
    }
  }
}
