{
  "index_patterns": [
    "example_*"
  ],
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "its_no_ecs_example": {
        "properties": {
          "testing_alias_field": {
            "path": "testing_field",
            "type": "alias"
          },
          "testing_field": {
            "ignore_above": 1024,
            "type": "keyword"
          }
        }
      }
    }
  },
  "order": 1,
  "settings": {
    "index": {
      "codec": "best_compression",
      "mapping": {
        "total_fields": {
          "limit": 1000
        }
      },
      "refresh_interval": "2s"
    }
  }
}
