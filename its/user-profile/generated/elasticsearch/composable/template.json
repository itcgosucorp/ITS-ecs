{
  "_meta": {
    "description": "Sample composable template that includes all ECS fields",
    "ecs_version": "8.9.0"
  },
  "composed_of": [
    "ecs_8.9.0_its",
    "ecs_8.9.0_base",
    "ecs_8.9.0_ecs",
    "ecs_8.9.0_event",
    "ecs_8.9.0_user",
    "ecs_8.9.0_related",
    "ecs_8.9.0_client"
  ],
  "index_patterns": [
    "try-ecs-*"
  ],
  "priority": 1,
  "template": {
    "mappings": {
      "date_detection": false,
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ]
    },
    "settings": {
      "index": {
        "codec": "best_compression",
        "mapping": {
          "total_fields": {
            "limit": 2000
          }
        }
      }
    }
  }
}
